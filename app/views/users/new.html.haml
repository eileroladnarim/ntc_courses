provide(:title, 'Sign up')
%h1 Sign up

.row
  .span6 .offset3
    %h1 Sign Up
    =form_for @user do |f|
        %p
            = f.label :email
            %br
            = f.text_field :email
        %p
            = f.label :name
            %br
            = f.text_field  :name
        %p
            = f.label :password
            %br
            = f.text_field :password
        %p
            = f.label :password_confirmation
            %br
            = f.password_field :password_confirmation
        %p.button
            = f.submit
 

