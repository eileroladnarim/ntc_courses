.row
    %h1 Add Schedule
    =form_for @schedule do |f|
        = f.label :courses
        = f.collection_select(:courses, Course.all, :id, :name, prompt: true)
        = f.label :instructor
        = f.collection_select(:instructors, Instructor.all, :first_name, :last_name)
        = f.label :training_manager
        = f.text_field :training_manager
        = f.label :actual_number_of_days
        = f.text_field :actual_number_of_days
        = f.label :schedule_type
        = f.text_field :schedule_type
        = f.label :start_date
        = f.text_field :start_date, { :class => 'datepicker' }
        = f.label :end_date
        = f.text_field  :end_date , { :class => 'datepicker' }
        = f.submit "Create", { :class => 'button' }
 
